# Nginx configuration for Webapp Frontend
# Deployed via Ansible on {{ inventory_hostname }}

server {
    listen 80;
    server_name {{ inventory_hostname }} node0.cloud.local;

    # Gzip Compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    gzip_min_length 1000;

    # Static Files (Vue.js SPA)
    root {{ frontend_home }}/dist;
    index index.html;

    # SPA Routing - alle Routen zu index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # API Proxy zum Flask Backend
    location /api/ {
        proxy_pass {{ backend_url }}/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeout für lange Spark-Berechnungen
        proxy_connect_timeout 120s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
    }

    # Solr Proxy
    location /solr/ {
        proxy_pass {{ solr_url }}/solr/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # CORS Headers für Solr
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
        add_header Access-Control-Allow-Headers "Content-Type";
    }

    # Cache für statische Assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Health Check
    location /health {
        return 200 'OK';
        add_header Content-Type text/plain;
    }
}
