{
  "id": null,
    "uid": "cloudkoffer-solr",
    "title": "Cloudkoffer - Apache Solr Cloud",
    "tags": ["cloudkoffer", "solr", "search"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "annotations": { "list": [] },
    "panels": [
      {
        "id": 100,
        "title": "üîç Cluster Overview",
        "type": "row",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 1,
        "title": "Solr Exporter Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 1, "w": 4, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } },
              { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } }
            ],
            "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
          }
        },
        "targets": [{ "expr": "up{job=\"solr\"}", "legendFormat": "Exporter" }],
        "options": { "graphMode": "none", "colorMode": "background" }
      },
      {
        "id": 2,
        "title": "Total Documents",
        "type": "stat",
        "gridPos": { "x": 4, "y": 1, "w": 5, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] }
          }
        },
        "targets": [{ "expr": "sum(solr_metrics_core_searcher_documents{item=\"numDocs\"})", "legendFormat": "Docs" }],
        "options": { "graphMode": "area", "colorMode": "value" }
      },
      {
        "id": 3,
        "title": "Total Index Size",
        "type": "stat",
        "gridPos": { "x": 9, "y": 1, "w": 5, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": { "mode": "absolute", "steps": [{ "color": "purple", "value": null }] }
          }
        },
        "targets": [{ "expr": "sum(solr_metrics_core_index_size_bytes)", "legendFormat": "Size" }],
        "options": { "graphMode": "area", "colorMode": "value" }
      },
      {
        "id": 4,
        "title": "Active Cores",
        "type": "stat",
        "gridPos": { "x": 14, "y": 1, "w": 5, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
          }
        },
        "targets": [{ "expr": "count(solr_metrics_core_searcher_documents{item=\"numDocs\"})", "legendFormat": "Cores" }],
        "options": { "graphMode": "none", "colorMode": "value" }
      },
      {
        "id": 5,
        "title": "Deleted Documents",
        "type": "stat",
        "gridPos": { "x": 19, "y": 1, "w": 5, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": { "mode": "absolute", "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 10000 }
            ]}
          }
        },
        "targets": [{ "expr": "sum(solr_metrics_core_searcher_documents{item=\"deletedDocs\"})", "legendFormat": "Deleted" }],
        "options": { "graphMode": "area", "colorMode": "value" }
      },
      {
        "id": 200,
        "title": "üìà Request Metrics (RED)",
        "type": "row",
        "gridPos": { "x": 0, "y": 5, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 6,
        "title": "Request Rate (per second)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 6, "w": 8, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": { "fillOpacity": 20, "lineWidth": 2 }
          }
        },
        "targets": [
          { "expr": "rate(solr_metrics_core_requests_total[5m])", "legendFormat": "{% raw %}{{ core }}{% endraw %}" }
        ]
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": { "x": 8, "y": 6, "w": 8, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": { "fillOpacity": 20, "lineWidth": 2 },
            "thresholds": { "mode": "absolute", "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.01 }
            ]}
          }
        },
        "targets": [
          { "expr": "rate(solr_metrics_core_errors_total[5m])", "legendFormat": "{% raw %}{{ core }}{% endraw %} Errors" },
          { "expr": "rate(solr_metrics_core_timeouts_total[5m])", "legendFormat": "{% raw %}{{ core }}{% endraw %} Timeouts" }
        ]
      },
      {
        "id": 8,
        "title": "Average Request Time (ms)",
        "type": "timeseries",
        "gridPos": { "x": 16, "y": 6, "w": 8, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": { "fillOpacity": 20, "lineWidth": 2 },
            "thresholds": { "mode": "absolute", "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]}
          }
        },
        "targets": [
          { "expr": "solr_metrics_core_query_median_ms", "legendFormat": "{% raw %}{{ core }}{% endraw %}" }
        ]
      },
      {
        "id": 300,
        "title": "üìä Core Details",
        "type": "row",
        "gridPos": { "x": 0, "y": 14, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 9,
        "title": "Documents per Core",
        "type": "bargauge",
        "gridPos": { "x": 0, "y": 15, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": { "mode": "absolute", "steps": [
              { "color": "blue", "value": null }
            ]},
            "min": 0
          }
        },
        "targets": [
          { "expr": "solr_metrics_core_searcher_documents{item=\"numDocs\"}", "legendFormat": "{% raw %}{{ collection }} {{ shard }}{% endraw %}" }
        ],
        "options": { "displayMode": "gradient", "orientation": "horizontal" }
      },
      {
        "id": 10,
        "title": "Index Size per Core",
        "type": "bargauge",
        "gridPos": { "x": 12, "y": 15, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": { "mode": "absolute", "steps": [
              { "color": "purple", "value": null }
            ]},
            "min": 0
          }
        },
        "targets": [
          { "expr": "solr_metrics_core_index_size_bytes", "legendFormat": "{% raw %}{{ core }}{% endraw %}" }
        ],
        "options": { "displayMode": "gradient", "orientation": "horizontal" }
      },
      {
        "id": 400,
        "title": "üíæ Cache Performance",
        "type": "row",
        "gridPos": { "x": 0, "y": 23, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 11,
        "title": "Query Result Cache Hit Ratio",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 24, "w": 8, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0, "max": 1,
            "thresholds": { "mode": "percentage", "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 80 }
            ]}
          }
        },
        "targets": [
          { "expr": "solr_metrics_core_searcher_cache_ratio{type=\"queryResultCache\"}", "legendFormat": "{% raw %}{{ collection }}{% endraw %}" }
        ]
      },
      {
        "id": 12,
        "title": "Document Cache Hit Ratio",
        "type": "gauge",
        "gridPos": { "x": 8, "y": 24, "w": 8, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0, "max": 1,
            "thresholds": { "mode": "percentage", "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 80 }
            ]}
          }
        },
        "targets": [
          { "expr": "solr_metrics_core_searcher_cache_ratio{type=\"documentCache\"}", "legendFormat": "{% raw %}{{ collection }}{% endraw %}" }
        ]
      },
      {
        "id": 13,
        "title": "Filter Cache Hit Ratio",
        "type": "gauge",
        "gridPos": { "x": 16, "y": 24, "w": 8, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0, "max": 1,
            "thresholds": { "mode": "percentage", "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 80 }
            ]}
          }
        },
        "targets": [
          { "expr": "solr_metrics_core_searcher_cache_ratio{type=\"filterCache\"}", "legendFormat": "{% raw %}{{ collection }}{% endraw %}" }
        ]
      },
      {
        "id": 500,
        "title": "üîß JVM Metrics",
        "type": "row",
        "gridPos": { "x": 0, "y": 30, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 14,
        "title": "JVM Heap Memory",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 31, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": { "fillOpacity": 20, "lineWidth": 2 }
          }
        },
        "targets": [
          { "expr": "solr_metrics_jvm_memory_heap_bytes{item=\"used\"}", "legendFormat": "{% raw %}{{ base_url }}{% endraw %} Used" },
          { "expr": "solr_metrics_jvm_memory_heap_bytes{item=\"max\"}", "legendFormat": "{% raw %}{{ base_url }}{% endraw %} Max" }
        ]
      },
      {
        "id": 15,
        "title": "JVM Non-Heap Memory",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 31, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": { "fillOpacity": 20, "lineWidth": 2 }
          }
        },
        "targets": [
          { "expr": "solr_metrics_jvm_memory_non_heap_bytes", "legendFormat": "{% raw %}{{ base_url }}{% endraw %}" }
        ]
      },
      {
        "id": 600,
        "title": "üìã Request Types",
        "type": "row",
        "gridPos": { "x": 0, "y": 39, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 16,
        "title": "Request Types Distribution",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 40, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "targets": [
          { "expr": "sum(solr_metrics_core_requests_total) by (handler)", "legendFormat": "{% raw %}{{ handler }}{% endraw %}" }
        ],
        "options": { "legend": { "displayMode": "table", "placement": "right" } }
      },
      {
        "id": 17,
        "title": "Total Requests Over Time",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 40, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": { "fillOpacity": 30, "lineWidth": 2, "stacking": { "mode": "normal" } }
          }
        },
        "targets": [
          { "expr": "increase(solr_metrics_core_requests_total[5m])", "legendFormat": "{% raw %}{{ core }}{% endraw %}" }
        ]
      }
    ]
}
